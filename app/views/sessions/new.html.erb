  <section class="contact">
    <div class="container">

      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">LOG IN</h2>
        </div>
      </div>

      <div class="row">
        <div class="offset-md-3 col-md-6">
          <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
          <div class="form-group">
            <%= f.text_field :email, class:"form-control", :placeholder => " EMAIL" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class:"form-control",:placeholder => " PASSWORD (8 or more characters) " %>
          </div>
　　　　　<div class="text-center">
            <%= f.submit 'LOG IN',class:"btn btn-primary btn-xl text-uppercase" %>
          </div>
          <% end %>
        </div>
      </div>

    </div>
  </section>
<!--log in-->