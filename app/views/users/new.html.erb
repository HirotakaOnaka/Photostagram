  <section class="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Sign Up</h2>

          <%= form_with(model: @user, local: true) do |f| %>
            <% if @user.errors.any? %>
              <div id ="error_explanation">
                <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
        </div>
      </div>

      <div class="row">
        <div class="offset-md-2 col-md-8">

          <div class="form-group">
            <%= f.text_field :name, class:"form-control", :placeholder => " USERNAME "%>
          </div>
          <div class="form-group">
            <%= f.text_field :email, class:"form-control", :placeholder => " EMAIL" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class:"form-control",:placeholder => " PASSWORD (8 or more characters) " %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, class:"form-control",:placeholder => " PASSWORD_CONFIRM " %>
          </div>
          <div class="form-group">
          <h5>Upload Your Photo</h5>
          <%= image_tag(@user.image.url) if @user.image.url %>
          <%= f.file_field :image, id: :user_image %>
          </div>
　　　　　<div class="text-center">
            <%= f.submit 'Create Account',class:"btn btn-primary btn-xl text-uppercase" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
<!--user_new-->
