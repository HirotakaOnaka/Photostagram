  <section class="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Your Account</h2>
        </div>
      </div>
      <div class="row">
        <div class="offset-md-4 col-md-4">
          <div class="text-center">
          <h4 class="service-heading">Your Icon</h4>

          <% if @user.image.present? %>
            <%= image_tag @user.image.thumb, class:'profile_image' %>
          <% else %>
            <%= image_tag "/user-icon.png" %>
          <% end %>

          </div>

　　　　　<div class="text-center">
          <h4 class="service-heading">USERNAME</h4>
            <%= @user.name %>
          </div>
　　　　　<div class="text-center">
          <h4 class="service-heading">EMAIL</h4>
            <%= @user.email %>
          </div>

          <div class="text-center">
            <%= link_to 'EDIT', edit_user_path(current_user),class:'btn btn-default' %>
          </div>

        </div>
      </div>
    </div>
  </section>
