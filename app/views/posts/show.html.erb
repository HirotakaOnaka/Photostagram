  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">DETAIL</h2>

        <div class="form-group">
        <%= image_tag(@post.image.url, :class => "show-pic") %>
      </div>

      <div class="form-group">
        <%= @post.content %>
      </div>

      <% unless @post.user_id == current_user.id%>
        <div class="text-center">
        <% if @like.present? %>
          <%= link_to "undo LIKE", like_path(id: @like.id), method: :delete, class:'btn btn-primary btn-sm' %>
        <% else %>
          <%= link_to "LIKE", likes_path(post_id: @post.id), method: :post, class:'btn btn-danger btn-sm' %>
        <% end %>
        </div>
      <% end %>

