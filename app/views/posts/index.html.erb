<!--post-->
<section class="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Posted PICS</h2>
      </div>
    </div>

    <div class="row">
      <% @posts.reverse.each do |post| %>
      <div class="col-md-12 col-lg-6">
        <div class='music-card'>
          <div class='image'>
            <%= link_to image_tag(post.image), post_path(post.id) %>
          </div>
          <div class='wave'></div>
          <div class='wave'></div>
          <div class='wave'></div>
          <div class='info'>
            <h2 class='title'>by <br><%= post.user.name %></h2>
            <% if post.user_id == current_user.id %>
              <%= link_to "edit", edit_post_path(post.id), class:"artist" %>
              <%= link_to "delete", post_path(post.id), method: :delete, class:"artist", data:{confirm: 'Are You Sureï¼Ÿ'} %>
            <% end %>
          </div>
        </div>
        <hr>
      </div>
      <% end %>
    </div>
  </div>
</section>